apiVersion: v1
kind: Secret
metadata:
  name: mysql-secret
  labels:
    app: bookmyshow
type: Opaque
data:
  # Default password: secret123 (base64 encoded)
  # To generate a new password: echo -n 'your-password' | base64
  # Example: echo -n 'mypassword' | base64
  password: YOUR_BASE64_ENCODED_PASSWORD_HERE
---
apiVersion: v1
kind: Secret
metadata:
  name: app-secret
  labels:
    app: bookmyshow
type: Opaque
data:
  # APP_KEY - Generate with: php artisan key:generate --show
  # Then encode to base64: echo -n 'base64:your-key' | base64
  # Or in PowerShell: [Convert]::ToBase64String([System.Text.Encoding]::UTF8.GetBytes("base64:your-key"))
  app-key: YOUR_BASE64_ENCODED_APP_KEY_HERE
